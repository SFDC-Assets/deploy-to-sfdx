{
    "compilerOptions": {
        "outDir": "../../lib/server",
        "target": "es2019",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        // "strict": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "removeComments": true,
        "types": ["node", "objection", "jest", "express", "ioredis", "fs-extra", "moment", "request-promise-native", "universal-analytics"]
    }
    // "compileOnSave": true,
    // "include": ["./src/server/**"],
    // "exclude": ["**/__tests__"]
}